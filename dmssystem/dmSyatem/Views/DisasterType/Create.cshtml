@model DisasterType

<h2>Create Disaster Type</h2>

<form asp-controller="DisasterType" asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="DisasterName"></label>
        <input asp-for="DisasterName" class="form-control" />
        <span asp-validation-for="DisasterName" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Severity"></label>
        <input asp-for="Severity" class="form-control" />
        <span asp-validation-for="Severity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-controller="DisasterType" asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
