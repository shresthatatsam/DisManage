@model List<Victim>

@{
    ViewData["Title"] = "Disaster Reports";
}

<h1>Disaster Reports</h1>
<a asp-controller="Report" asp-action="Index" class="btn btn-primary">Go to Report Generation</a>
<!-- Export Options -->
@* <div class="mt-4">
    <button class="btn btn-success">Export to PDF</button>
  
</div> *@
<a id="downloadExcel" class="btn btn-success">Download Excel</a>
<button class="btn btn-info">Export to Excel</button>
<button class="btn btn-warning">Export to CSV</button>

@if (Model != null && Model.Any())
{
    <table class="table table-striped table-bordered table-hover custom-table">

        <thead>
            <tr>

                <th>Name </th>
                <th>Phone Number </th>
                <th>Disaster Type</th>
                <th>Date</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var report in Model)
            {
                <tr>
                    <td>@report.Name</td>
                    <td>@report.ContactNumber</td>
                    <td>@report.Disaster.DisasterType</td>
                    <td>@report.Disaster.DateReported</td>
                    <td> <a asp-controller="Dashboard" asp-action="Details" asp-route-id="@report.Id" class="btn btn-primary btn-sm">View</a> </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No reports found.</p>
}


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
    <link rel="stylesheet" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.min.css" />

    <script>
        $(document).ready(function () {
            var table = $('.table').DataTable();

            $('#downloadExcel').on('click', function () {
                window.location.href = '@Url.Action("DownloadExcel", "Report")';
            });
        });
    </script>
}
