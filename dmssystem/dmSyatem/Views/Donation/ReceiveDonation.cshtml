<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Payment Form</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .hidden {
            display: none;
        }
    </style>
</head>
<body>

    <div class="container mt-5">
        <form asp-controller="Donation" asp-action="CreateGiveDOnation" id="paymentForm">

            <input type="hidden" name="type" value="Receive" />
            <div class="form-row">
                <div class="form-group col-lg-6">
                    <label for="name">नाम:</label>
                    <input type="text" class="form-control" id="name" name="name" required>
                </div>

                <div class="form-group col-lg-6">
                    <label for="phoneNumber">फोन नम्बर:</label>
                    <input type="text" class="numb" id="phoneNumber" name="phoneNumber" required>
                </div>

                <div class="form-group col-lg-6">
                    <label for="email">इमेल:</label>
                    <input type="email" class="form-control" id="email" name="email" required>
                </div>

                <div class="form-group col-lg-6">
                    <label for="address">ठेगाना:</label>
                    <input type="text" class="form-control" id="address" name="address" required>
                </div>

                <div class="form-group col-lg-6">
                    <label for="paymentMethod">भुक्तानी विधि:</label>
                    <select class="form-control" id="paymentMethod" name="paymentMethod" onchange="showRelevantFields()" required>
                        <option value="">चयन गर्नुहोस्</option>
                        <option value="cash">नगद</option>
                        <option value="cheque">चेक</option>
                    </select>
                </div>

                <div class="form-group col-lg-6 " id="amountField">
                    <label for="amount">रकम:</label>
                    <input type="text" class="form-control" id="amount" name="amount">
                </div>

          <!--     <div class="form-group col-lg-6" id="Jinsi">
                    <label for="Jinsi">Jinsi:</label>
                    <input type="text" class="form-control" id="Jinsi" name="Jinsi">
                </div>
                -->

                <div class="form-group col-lg-6 hidden" id="bankNameField">
                    <label for="bankName">बैंकको नाम:</label>
                    <input type="text" class="form-control" id="bankName" name="bankName">
                </div>


              
            </div>

            <button type="submit" class="btn btn-primary">पेश गर्नुहोस्</button>
        </form>
    </div>

    <script>
        function showRelevantFields() {
            const paymentMethod = document.getElementById('paymentMethod').value;

            const bankNameField = document.getElementById('bankNameField');




            bankNameField.classList.add('hidden');


            // Show relevant fields based on payment method
            if (paymentMethod === 'cash') {
            } else if (paymentMethod === 'cheque') {
                bankNameField.classList.remove('hidden');
            }
        }
    </script>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>
</html>
