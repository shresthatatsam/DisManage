@model RescueTeam

<h2>उद्धार टोली सिर्जना गर्नुहोस्</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="TeamName"></label>
        <input asp-for="TeamName" class="form-control" />
        <span asp-validation-for="TeamName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LocationId">स्थान</label>
        <select asp-for="LocationId" class="form-control" asp-items="@(new SelectList(ViewBag.Locations, "Id", "Name"))">
            <option value="">-- स्थान चयन गर्नुहोस् --</option>
        </select>
        <span asp-validation-for="LocationId" class="text-danger"></span>
    </div>

    <h5>स्वयंसेवक चयन गर्नुहोस्</h5>
    <div class="form-group">
        <select id="selectedVolunteers" name="SelectedVolunteerIds" class="form-control" multiple>
            @foreach (var volunteer in ViewBag.AvailableVolunteers)
            {
                <option value="@volunteer.Id">@volunteer.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">पेश गर्नुहोस्</button>
</form>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#selectedVolunteers').select2({
                placeholder: "Select Volunteers",
                allowClear: true
            });
        });
    </script>
}
