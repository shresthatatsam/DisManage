@model Victim
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Victim Details Form</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>Victim Information</h1>
        <form asp-controller="Victim" asp-action="Edit" method="POST" enctype="multipart/form-data">


            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" id="name" name="name" asp-for="Name" required>
            </div>

            <div class="form-group">
                <label for="age">Age</label>
                <input type="text" id="age" name="age" asp-for="Age" required>
            </div>

            <div class="form-group">
                <label for="gender">Gender</label>
                <select id="gender" name="gender" asp-for="Gender">
                    <option value="male">Male</option>
                    <option value="female">Female</option>
                    <option value="other">Other</option>
                </select>
            </div>

            <div class="form-group">
                <label for="contact">Contact Number</label>
                <input type="text" id="contact" name="contactNumber" asp-for="ContactNumber" required>
            </div>

            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" asp-for="Email">
            </div>

            <div class="form-group">
                <label for="ppSizePhotoFile">Upload PP Size Photo</label>
                <input type="file" class="form-control" id="ppSizePhotoFile" name="ppSizePhotoFile" asp-for="PPSizePhoto" />
            </div>

            <div class="form-group">
                <label for="citizenshipNumber">Citizenship Number</label>
                <input type="text" id="citizenshipNumber" name="citizenshipNumber" asp-for="CitizenshipNumber">
            </div>

            <div class="form-group">
                <label for="nidNumber">NID Number</label>
                <input type="text" id="nidNumber" name="nidNumber" asp-for="NIDNumber">
            </div>

            <div class="form-group">
                <label for="fatherName">Father's Name</label>
                <input type="text" id="fatherName" name="fatherName" asp-for="FatherName">
            </div>

            <div class="form-group">
                <label for="motherName">Mother's Name</label>
                <input type="text" id="motherName" name="motherName" asp-for="MotherName">
            </div>

            <div class="form-group">
                <label for="grandFatherName">Grandfather's Name</label>
                <input type="text" id="grandFatherName" name="grandFatherName" asp-for="GrandFatherName">
            </div>

            <div class="form-group">
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>
</body>
</html>
