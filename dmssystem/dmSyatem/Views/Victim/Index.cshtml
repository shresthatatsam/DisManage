@model Victim
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Victim Details Form</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="container">
        <h1>पीडितको सूचना</h1>
        <form asp-controller="Victim" asp-action="Edit" method="POST" enctype="multipart/form-data">

             <div class="form-group">
                <label for="Nationality">राष्ट्रीयता</label>
                <select id="Nationality" name="Nationality" asp-for="Nationality" required onchange="toggleCitizenInput()">
                    <option value="foreigner">Foreigner</option>
                    <option value="nepali">Nepali</option>
                </select>
            </div> 

           

            <!-- Passport Number field (initially hidden) -->
             <div class="form-group" id="passport-group">
                <label for="PassportNumber">पासपोर्ट संख्या</label>
                <input type="text" class="claForeign" id="PassportNumber" name="PassportNumber" asp-for="PassportNumber" disabled>
            </div>
 


            <div class="form-group">
                <label for="name">नाम</label>
                <input type="text" class="shorttext" id="name" name="name" asp-for="Name" required>
            </div>

            <div class="form-group">
                <label for="age">उमेर</label>
                <input type="text"  id="age" name="age" asp-for="Age" required>
            </div>

            <div class="form-group">
                <label for="gender">लिंग</label>
                <select id="gender" name="gender" asp-for="Gender">
                    <option value="" selected>लिंग चयन गर्नुहोस्</option>
                    <option value="male">पुरुष</option>
                    <option value="female">महिला</option>
                    <option value="other">अन्य</option>
                </select>
            </div>

            <div class="form-group">
                <label for="contact">सम्पर्क नम्बर</label>
                <input type="text" class="numb" id="contact" name="contactNumber" asp-for="ContactNumber" required>
            </div>

            <div class="form-group">
                <label for="email">इमेल</label>
                <input type="email" id="email" name="email" asp-for="Email">
            </div>

            <div class="form-group">
                <label for="ppSizePhotoFile">पीपी साइज फोटो अपलोड गर्नुहोस्</label>
                <input type="file" class="form-control" id="ppSizePhotoFile" name="ppSizePhotoFile" asp-for="PPSizePhoto" />
            </div>

            <div class="form-group">
                <label for="citizenshipNumber">नागरिकता नम्बर</label>
                <input type="text" class="claNepali" id="citizenshipNumber" name="citizenshipNumber" asp-for="CitizenshipNumber" disabled>
            </div>

            <div class="form-group">
                <label for="nidNumber">एनआईडी नम्बर</label>
                <input type="text" class="claNepali" id="nidNumber" name="nidNumber" asp-for="NIDNumber" disabled>
            </div>

            <div class="form-group">
                <label for="fatherName">बुबाको नाम</label>
                <input type="text" id="fatherName" name="fatherName" asp-for="FatherName">
            </div>

            <div class="form-group">
                <label for="motherName">आमाको नाम</label>
                <input type="text" id="motherName" name="motherName" asp-for="MotherName">
            </div>

            <div class="form-group">
                <label for="grandFatherName">हजुरबुबाको नाम</label>
                <input type="text" id="grandFatherName" name="grandFatherName" asp-for="GrandFatherName">
            </div>

            <div class="form-group">
                <button type="submit">पेश गर्नुहोस्</button>
            </div>
        </form>
    </div>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <script>
        function toggleCitizenInput() {
            var nationality = $("#Nationality").val();
            alert(nationality);
            
            var nepaliInput = $(".claNepali");
            var foreignInput = $(".claForeign");
            if (nationality === "foreigner") {
                // Disable Nepali citizen input and enable Foreign input
                nepaliInput.prop("disabled", true);
                foreignInput.prop("disabled", false);
            } else {
                // Disable Foreign input and enable Nepali citizen input
                foreignInput.prop("disabled", true);
                nepaliInput.prop("disabled", false);
            }
        }
    </script>
</body>
</html>
