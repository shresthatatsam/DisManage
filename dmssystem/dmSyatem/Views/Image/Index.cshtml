@model List<Image>



<form asp-action="Create" method="post" enctype="multipart/form-data">
    <h1>फोटो सूचना</h1>
    <div class="form-group">
        <label for="imageFiles">फोटोहरू अपलोड गर्नुहोस्</label>
        <input type="file" class="form-control" id="imageFiles" name="imageFiles" multiple />
        <small class="form-text text-muted">तपाईं एक पटकमा अपलोड गर्न धेरै फोटोहरू चयन गर्न सक्नुहुन्छ।</small>
    </div>

    <div class="form-group">
        <label for="Description">फोटो विवरण</label>
        <textarea class="form-control" id="Description" name="Description" placeholder="Enter description for the images"></textarea>
    </div>

    <div class="form-group">
        <label for="DisasterDate">विपत्ति मिति</label>
        <input type="date" class="form-control" id="DisasterDate" name="DisasterDate" />
    </div>

    <button type="submit" class="btn btn-primary">फोटोहरू अपलोड गर्नुहोस्</button>
</form>
