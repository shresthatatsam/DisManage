@model List<Volunteer>

<div class="container">
    <h2 class="text-center">स्वयंसेवकहरूको सूची</h2>

    <!-- Create New Button -->
    <div class="text-end mb-3">
        <a href="@Url.Action("Create")" class="btn btn-success">नयाँ स्वयंसेवक सिर्जना गर्नुहोस्</a>
    </div>

    <!-- Table to show the list of volunteers -->
    <table class="table table-striped">
        <thead>
            <tr>
                <th>नाम</th>
                <th>उमेर</th>
                <th>लिंग</th>
                <th>सम्पर्क नम्बर</th>
                <th>इमेल</th>
                <th>उपलब्धता</th>
                <th>कार्यहरू</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var volunteer in Model)
            {
                <tr>
                    <td>@volunteer.Name</td>
                    <td>@volunteer.Age</td>
                    <td>@volunteer.Gender</td>
                    <td>@volunteer.ContactNumber</td>
                    <td>@volunteer.Email</td>
                    <td>@volunteer.Availability</td>
                    <td>
                        <!-- You can add other actions like Edit, Delete here -->
                        <a href="@Url.Action("Edit", new { id = volunteer.Id })" class="btn btn-warning btn-sm">सम्पादन गर्नुहोस्</a>
                        @* <a href="@Url.Action("Delete", new { id = volunteer.Id })" class="btn btn-danger btn-sm">मेट्नुहोस्</a> *@
                        <form action="@Url.Action("Delete", "Volunteer", new { id = volunteer.Id })" method="post" style="display:inline;">
                            <button type="submit" class="btn btn-danger btn-sm" onclick="return confirm('तपाईँ यो वस्तु मेट्न निश्चित हुनुहुन्छ?');">मेट्नुहोस्</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
